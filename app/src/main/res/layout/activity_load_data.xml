<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgBlue"
    tools:context=".Login.LoadDataActivity">

    <ImageView
        android:id="@+id/img_icon_app"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:src="@drawable/ic_app_main" />

    <SeekBar
        android:id="@+id/sb_load_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_icon_app"
        android:max="100"
        android:thumbTint="@color/bgGray"
        android:theme="@style/SeekBarColor"
        />

    <TextView
        android:id="@+id/tv_percent_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 %"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/font_size_topic"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/bgWhite"
        android:layout_below="@+id/sb_load_data"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>