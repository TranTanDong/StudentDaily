<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Subject.AddScheduleTestActivity">

    <include layout="@layout/toolbar_layout"></include>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/bgWhite"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Môn học"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_text"
                    android:fontFamily="sans-serif-black"/>

                <Spinner
                    android:id="@+id/spn_subject_test"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="@dimen/font_size_topic"
                    android:textAlignment="center"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Hình thức"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_text"
                    android:fontFamily="sans-serif-black"/>

                <Spinner
                    android:id="@+id/spn_form_test"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="@dimen/font_size_topic"
                    android:textAlignment="center"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Thời gian"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_text"
                    android:fontFamily="sans-serif-black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_day_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="20/11/2018"
                        android:background="@color/bgGray"
                        android:textColor="@color/textColorBlack"
                        android:textAlignment="center"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:textSize="@dimen/font_size_text" />

                    <TextView
                        android:id="@+id/tv_time_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bgGray"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:text="14:00"
                        android:textColor="@color/textColorBlack"
                        android:textAlignment="center"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/font_size_text" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Phòng"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_text"
                    android:fontFamily="sans-serif-black"/>

                <EditText
                    android:id="@+id/edt_place_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:hint="Ví dụ: 202/C1, 101/KH, ..."
                    android:textSize="@dimen/font_size_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Ghi chú"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_text"
                    android:fontFamily="sans-serif-black"/>

                <EditText
                    android:id="@+id/edt_note_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:hint="Ghi chú nội dung kiểm tra"
                    android:textSize="@dimen/font_size_text" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>